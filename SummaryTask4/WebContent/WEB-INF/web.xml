<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>SummaryTask4</display-name>
  <welcome-file-list>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/error_page.jsp</location>
  </error-page>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/finaltask</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>ua.nure.sutyagin.SummaryTask4.web.command.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>CommandAccessFilter</filter-name>
    <filter-class>ua.nure.sutyagin.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
    <init-param>
      <param-name>administrator</param-name>
      <param-value>listTripsDisp makeTrip seeRequests makeCompleteRequest listComplReq listAutos listUsers makeBan regNewUser selectUpdateCar deleteCar deleteUser addAuto</param-value>
    </init-param>
    
    <init-param>
      <param-name>driver</param-name>
      <param-value>listTrips makeRequest completeRequest seeRequests listComplReq tripAccepted listAutos setLocale map</param-value>
    </init-param>
    <init-param>
      <param-name>dispatcher</param-name>
      <param-value>listTripsDisp makeTrip seeRequests makeCompleteRequest listComplReq listAutos setLocale listAddress addAddress deleteAdr updateAdr</param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>logout noCommand viewSettings setLocale</param-value>
    </init-param>
    <init-param>
      <param-name>out-of-control</param-name>
      <param-value>login setLocale reg</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CommandAccessFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.nure.sutyagin.SummaryTask4.web.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <listener>
    <listener-class>ua.nure.sutyagin.SummaryTask4.web.listener.ContextListener</listener-class>
  </listener>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
</web-app>